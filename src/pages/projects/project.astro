---
import { Image } from 'astro:assets';

import Navbar from '../../components/Navbar';
import ProjectTitle from '../../components/ProjectTitle';
import Layout from '../../layouts/Layout.astro';
import Section from '../../components/Section.astro';
import GradientBackground from '../../components/GradientBackground';

const title = 'QuetzalVPN';
const description = 'OpenVPN made easy!';
---

<Layout title="Project">
  <Navbar />

  <div class="relative mt-28">
    <div id="wrapper">
      <GradientBackground />
      <ProjectTitle title={title} description={description} />
      <div class="flex justify-center items-center">
        <Image
          src={import('/src/assets/projects/quetzal/iphone-left.png')}
          alt="Iphone mockup"
          class="ml-12 w-1/4"
        />
        <Image
          src={import('/src/assets/projects/quetzal/macbook.png')}
          alt="Macbook mockup"
          class="w-1/2"
        />
        <Image
          src={import('/src/assets/projects/quetzal/iphone-right.png')}
          alt="Iphone mockup"
          class="w-1/4 mr-12"
        />
      </div>
    </div>
    <Section class="px-20" name="Details">
      <h2 class="font-medium text-6xl text-white-90">Details</h2>
      <div class="text-white-70 text-body-lg">
        <p>
          <em>QuetzalVPN</em> is a free and open source <em>Web GUI</em> for
          your <em>OpenVPN</em>
           server. <em>Features</em> include:
        </p>
        <ul class="list-disc ml-14">
          <li>User Management <em>👤</em></li>
          <li>Server Configuration <em>⚙️</em></li>
          <li>A dashboard <em>📊</em></li>
        </ul>
      </div>
    </Section>
  </div>
</Layout>
